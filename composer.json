{
  "name": "wp-oop/http-client",
  "description": "A PSR-18 wrapper for the WordPress HTTP API",
  "minimum-stability": "dev",
  "license": "MIT",
  "authors": [
    {
      "name": "Anton Ukhanev",
      "email": "xedin.unknown@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4 | ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0 | ^10.0",
    "vimeo/psalm": "^5.0",
    "webmozart/path-util": "^2.3@stable",
    "slevomat/coding-standard": "^6.0"
  },
  "autoload": {
    "psr-4": {
      "WpOop\\HttpClient\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WpOop\\HttpClient\\Test\\Func\\": "tests/functional"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
